<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<connectionStrings>
		<!-- Cadena de conexión para SQL Server local -->
		<add name="SistemaAlquilerAutos"
		     connectionString="Data Source=localhost;Initial Catalog=SistemaAlquilerAutos;Integrated Security=True;TrustServerCertificate=True"
		     providerName="System.Data.SqlClient" />

		<!-- Alternativa con usuario y contraseña -->
		<!--
		<add name="SistemaAlquilerAutos"
		     connectionString="Data Source=localhost;Initial Catalog=SistemaAlquilerAutos;User ID=sa;Password=TuPassword;TrustServerCertificate=True"
		     providerName="System.Data.SqlClient" />
		-->

		<!-- Para SQL Server Express -->
		<!--
		<add name="SistemaAlquilerAutos"
		     connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=SistemaAlquilerAutos;Integrated Security=True;TrustServerCertificate=True"
		     providerName="System.Data.SqlClient" />
		-->
	</connectionStrings>

	<appSettings>
		<add key="NombreEmpresa" value="Sistema de Alquiler de Autos" />
		<add key="Version" value="1.0.0" />
	</appSettings>
</configuration>
